<aura:component access="GLOBAL" support="GA" extends="ui:menuItem" extensible="true"
                description="â€‹A menu item with a checkbox that supports multiple selection and can be used to invoke an action. This component is nested in a ui:menu component.">

    <aura:attribute name="role" type="String" default="menuitemcheckbox" description="Defines the accessibility role of the menu item. Defaults to 'menuitemcheckbox'."/>

    <aura:method name="select" action="{!c.select}"/>

    <aura:handler name="init" value="{!this}" action="{!c.init}"/>

    <aura:locator target="anchor" alias="select-checkBoxMenuItem" description="Select checkBoxMenuItem">
        <aura:locatorContext key="body" value="{!v.body}"/>
    </aura:locator>

    <li role="presentation" class="{!v.class}">
        <a aura:id="anchor" onclick="{!c.onClick}"/>
    </li>
</aura:component>