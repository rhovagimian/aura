<aura:component access="GLOBAL" support="GA" extends="ui:menuItem" extensible="true" description="â€‹A menu item with a radio button that indicates a mutually exclusive selection and can be used to invoke an action. This component is nested in a ui:menu component.">

    <!-- Overrides the default value of 'true' -->
    <aura:attribute access="GLOBAL" name="hideMenuAfterSelected" type="Boolean" default="false" description="Set to true to hide menu after the menu item is selected." />

    <aura:attribute name="role" type="String" default="menuitemradio" description="Defines the accessibility role of the menu item. Defaults to 'menuitemradio'."/>

    <aura:method name="select" action="{!c.select}"/>

    <aura:handler name="init" value="{!this}" action="{!c.init}"/>

    <aura:locator target="anchor" alias="select-radioMenuItem" description="Radio menu item action">
        <aura:locatorContext key="body" value="{!v.body}"/>
    </aura:locator>
    
    <li aura:id="listitem" class="{!v.class}" role="presentation">
        <a aura:id="anchor" onclick="{!c.onClick}"/>
    </li>

</aura:component>