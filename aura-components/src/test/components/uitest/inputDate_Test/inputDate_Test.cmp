<aura:component>
    <aura:attribute name="value" type="String"/>
    <aura:attribute name="format" default="yyyy-MM-dd" type="String"/>
    <aura:attribute name="timezone" type="String"/>
    <aura:handler name="change" value="{!v.value}" action="{!c.valueChange}"/>
    <div id="dlh_outputText">
      after datePicker show up, click me or any other place on the page to make it disappear
    </div>
    <ui:outputText class="outputStatus" aura:id="outputStatus" value=""/><br/><br/>
    <ui:inputDate aura:id="datePickerTestCmp"
                label="date picker with label"
                displayDatePicker="true"
                loadDatePicker="true"
                class="date_input_box"
                timezone="{!v.timezone}"
                format="{!v.format}"
                value="{!v.value}"/>
    <ui:button aura:id="clearBtn" label="Clear" press="{!c.clearDate}" />
</aura:component>
